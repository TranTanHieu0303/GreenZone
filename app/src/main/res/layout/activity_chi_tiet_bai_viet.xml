<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_nhap"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/CT_BaiViet_Toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cl_toobar"
        app:title="Bình Luận"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/CT_BaiViet_img_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_color="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/CT_BaiViet_tv_tentk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/CT_BaiViet_img_chedo"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_cong_khai"/>
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/CT_BaiViet_tv_thoigian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21/08/2000 lúc 20:23"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/CT_BaiViet_tv_noidung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:minWidth="400dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/CT_BaiViet_rcv_hinhanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/CT_BaiViet_tv_luotlike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_likemau"
            android:text="100"
            android:paddingLeft="10dp"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/CT_BaiViet_tv_luotcmt_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100 bình luận , 20 lượt chia sẽ"
            android:paddingLeft="10dp"
            android:drawablePadding="5dp"
            android:textAlignment="textEnd"
            android:paddingRight="10dp"/>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bình Luận"
            android:textColor="@color/black"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/CT_BaiViet_rcv_Cmt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/layout_nhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <EditText
            android:id="@+id/CT_BaiViet_edt_cmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="19"/>
        <ImageView
            android:id="@+id/Ct_BaiViet_img_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_send_24"
            android:layout_gravity="center"
            />
    </LinearLayout>
</RelativeLayout>